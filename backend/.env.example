# ===========================
# 应用配置
# ===========================

# 应用环境: development, production
APP_ENV=development

# 日志级别: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ===========================
# 服务器配置
# ===========================

# 代理服务器基础 URL
PROXY_BASE_URL=http://localhost:8000

# ===========================
# WebSocket 配置
# ===========================

# WebSocket 请求超时时间（秒）
WEBSOCKET_TIMEOUT=600

# ===========================
# CORS 配置
# ===========================

# 允许的跨域源，多个用逗号分隔，* 表示允许所有
CORS_ORIGINS=*

# 是否允许携带凭证
CORS_ALLOW_CREDENTIALS=true

# ===========================
# 文件上传配置
# ===========================

# 临时文件块存储目录
TEMP_CHUNKS_DIR=./temp_chunks

# 上传会话过期时间（秒），默认 1 小时
SESSION_EXPIRATION_TIME=3600

# 会话清理间隔（秒），默认 10 分钟
SESSION_CLEANUP_INTERVAL=600
